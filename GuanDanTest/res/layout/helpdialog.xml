<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:label="@string/help_title" android:layout_width="wrap_content"
	android:layout_height="fill_parent" android:padding="5dp">

	<LinearLayout android:orientation="vertical"
		android:padding="10dp" android:layout_height="fill_parent"
		android:layout_width="fill_parent">

		<TextView android:id="@+id/helpTxt" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/helptext" />

		<Button android:id="@+id/help_ok" android:text="@string/ok_button"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="center" android:layout_marginTop="5dp"
			android:width="100dp" />

	</LinearLayout>
</ScrollView>

